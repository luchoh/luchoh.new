{% extends "base.njk" %}
{% block content %}
    <div class="row">
        <div class="col s12 center-align">
            <div class="row">
                <div id="image-list" class="col s12 center-align">
                    <div class="latest-photos">
                        <div class="row">
                            {% for image in images %}
                                <div class="col s12 m6 l3 featured-photo">
                                    <div class="image index" itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject">
                                        <a class="swipebox" itemprop="contentUrl" href="/image/{{ image.id }}-{{ image.slug }}" title="{{ image.title }}">
                                            <img src="{{ image.thumbnail_url or image.file_path }}" alt="{{ image.title }}" class="lazyload center-align responsive-img" itemprop="thumbnail"></a>
                                            <div class="window title">
                                                <h3 class="image-title" itemprop="name">{{ image.title }}</h3>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% if images.length === 0 %}
                <p>No images found. Please make sure your API is running and returning data.</p>
            {% endif %}
        </div>
        <!-- Login Modal -->
        <div id="login-modal" class="modal">
            <div class="modal-content">
                <h4>Sign In</h4>
                <form id="login-form" autocomplete="off">
                    <div class="input-field">
                        <input id="username" type="text" required autocomplete="off">
                            <label for="username">Username</label>
                        </div>
                        <div class="input-field">
                            <input id="password" type="password" required autocomplete="off">
                                <label for="password">Password</label>
                            </div>
                            <button class="btn waves-effect waves-light" type="submit">Sign In</button>
                        </form>
                    </div>
                </div>
            {% endblock %}