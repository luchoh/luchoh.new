{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        },
        {
            "name": "Python Debugger: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": false,
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend:${env:PYTHONPATH}",
                "BACKEND_PORT": "8000",
                "WORKERS": "1"
            },
            "envFile": "${workspaceFolder}/backend/app/.env",
            "python": "${workspaceFolder}/backend/.venv/bin/python"
        }
    ]
}